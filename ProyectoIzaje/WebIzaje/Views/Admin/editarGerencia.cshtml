@model WebIzaje.Models.gerencia
@{
    ViewBag.Title = "Editar Gerencia";
}

<div class="container">

    <div class="panel-body">
          
        <div class="page-header">
            <h2 class="text-center">Editar Gerencia</h2>
        </div>

        <form class="form-horizontal" role="form" method="post" action="@Url.Action("AgregarEditarGerencia", "Admin")">
            <div class="form-group">
                <label class="col-sm-2 control-label">Nombre:</label>
                <div class="col-sm-10">
                    <input type="hidden" name="nombre" value="@Model.nombre">
                    <input type="text" class="form-control" name="nombre_nuevo" pattern="[a-zA-Z0-9áéíóú ]+" value="@Model.nombre" placeholder="Nombre" required>
                </div>
            </div>

            <div class="form-group">
                <label class="col-lg-2 control-label">Descripción:</label>
                <div class="col-sm-10">
                    <textarea class="form-control" name="descripcion" rows="3" style="resize:none !important" placeholder="Descripción">@Model.descripcion</textarea>
                </div>
            </div>
            <div class="modal-footer">
                <a type="button" href="@Url.Action("gerencias","Admin")" class="btn btn-default btn-lg"><i class="glyphicon glyphicon-log-out"></i>&nbsp;Cancelar</a>
                <button type="submit" class="btn btn-primary btn-lg" id="enviar"><i class="glyphicon glyphicon-floppy-disk"></i>&nbsp;Guardar</button>
            </div>
        </form>
    </div>
</div>






