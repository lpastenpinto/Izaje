@model WebIzaje.Models.tipoEquipo
@{
    ViewBag.Title = "Editar Tipo Equipo";
}

<div class="container">

        <div class="page-header">
            <h1 class="text-center">Editar Tipo de Equipo</h1>
        </div>

        <form class="form-horizontal" role="form" method="post" action="@Url.Action("AgregarEditarTipoEquipo", "Admin")">
            <div class="form-group">
                <label for="tipo" class="col-lg-2 control-label">Tipo:</label>
                <div class="col-lg-10">
                    <input type="hidden" name="tipo" value="@Model.tipo">
                    <input type="text" class="form-control" name="tipo_nuevo" pattern="[a-zA-Z0-9áéíóú ]+" placeholder="Nombre" value="@Model.tipo" required>
                </div>
            </div>

            <div class="form-group">
                <label class="col-lg-2 control-label">Familia</label>
                <div class="col-lg-10">
                    <select class="form-control" name="familia" required>
                        @{
                            List<WebIzaje.Models.Familia_Equipo> familias = (List<WebIzaje.Models.Familia_Equipo>)ViewBag.familias;
                            foreach (var x in familias)
                            {
                                if (x.nombre.Equals(Model.familia))
                                {
                                    <option value="@x.nombre" selected>@x.nombre</option>
                                }
                                else
                                {
                                    <option value="@x.nombre">@x.nombre</option>
                                }
                            }
                        }
                    </select>
                </div>
            </div>

            <div class="form-group">
                <label class="col-lg-2 control-label">Minimo de horas garantizadas de pago:</label>
                <div class="col-lg-10">
                    <input type="number" class="form-control" name="minimoGarantizado" placeholder="horas garantizadas" value="@Model.minimoGarantizado" required>
                </div>
            </div>

            <div class="form-group">
                <label class="col-lg-2 control-label">Valor Hora Normal (UF):</label>
                <div class="col-lg-10">
                    <input type="text" class="form-control" name="costoHoraNormal" placeholder="valor" value="@Model.costo_hora_normal" required>
                </div>
            </div>

            <div class="form-group">
                <label for="costoHoraExtra" class="col-lg-2 control-label">Valor Hora Extra (UF):</label>
                <div class="col-lg-10">
                    <input type="text" class="form-control" name="costoHoraExtra" placeholder="valor" value="@Model.costo_hora_extra" required>
                </div>
            </div>

            <div class="modal-footer">
                <a type="button" href="@Url.Action("tiposEquipo","Admin")" class="btn btn-default btn-lg"><i class="glyphicon glyphicon-log-out"></i>&nbsp;Cancelar</a>
                <button type="submit" class="btn btn-primary btn-lg" id="enviar"><i class="glyphicon glyphicon-floppy-disk"></i>&nbsp;Guardar</button>
            </div>
        </form>

</div>
