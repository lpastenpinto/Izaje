@{
    ViewBag.Title = "Nueva Gerencia";
}

<div class="container">

    <div class="panel-body">
          
        <div class="page-header">
            <h2 class="text-center">Nueva Gerencia</h2>
        </div>

        <form class="form-horizontal" role="form" method="post" action="@Url.Action("metodoAgregarGerencia", "Admin")">
            <div class="form-group">
                <label for="nombre" class="col-lg-2 control-label">Nombre:</label>
                <div class="col-lg-10">
                    <input type="text" class="form-control" id="nombre" name="nombre" pattern="[a-zA-Z0-9áéíóú ]+"
                           placeholder="nombre de la gerencia" required>
                </div>
            </div>
            <div class="form-group">
                <label for="descripcion" class="col-lg-2 control-label">Descripción de la gerencia</label>
                <div class="col-lg-10">
                    <textarea class="form-control" id="descripcion" name="descripcion" rows="3"
                                style="resize:none !important"
                                placeholder="ingrese una descripción la gerencia" required></textarea>
                </div>
            </div>
            <div class="modal-footer">
                <a type="button" href="@Url.Action("gerencias","Admin")" class="btn btn-default btn-lg"><i class="glyphicon glyphicon-log-out"></i>&nbsp;Cancelar</a>
                <button type="submit" class="btn btn-primary btn-lg" id="enviar"><i class="glyphicon glyphicon-floppy-disk"></i>&nbsp;Guardar</button>
            </div>
        </form>
    </div>
</div>






