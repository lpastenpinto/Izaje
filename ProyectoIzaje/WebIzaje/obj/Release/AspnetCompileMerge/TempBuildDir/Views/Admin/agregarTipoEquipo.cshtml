@{
    ViewBag.Title = "Nuevo Tipo Equipo";
}

<div class="container">
   
    <div class="panel-body">
         
        <div class="page-header">
            <h1 class="text-center">Nuevo Tipo de Equipo</h1>
        </div>
            <form class="form-horizontal" role="form" method="post" action="@Url.Action("metodoAgregarTipoEquipo", "Admin")">
                <div class="form-group">
                    <label for="tipo" class="col-lg-2 control-label">Tipo:</label>
                    <div class="col-lg-10">
                        <input type="text" class="form-control" id="tipo" name="tipo" pattern="[a-zA-Z0-9áéíóú ]+"
                               placeholder="nombre del tipo de equipo" required>
                    </div>
                </div>
                <div class="form-group">
                    <label for="familia" class="col-lg-2 control-label">Familia del tipo de equipo</label>
                    <div class="col-lg-10">
                        <select class="form-control" id="familia" name="familia" required>
                            @{
                                List<WebIzaje.Models.Familia_Equipo> familias = (List<WebIzaje.Models.Familia_Equipo>)ViewData["familias"];

                                for (int i = 0; i < familias.Count; i++)
                                {
                                    <option value="@familias[i].nombre">@familias[i].nombre</option>
                                }
                            }
                        </select>
                    </div>
                </div>
                <div class="form-group">
                    <label for="minimoGarantizado" class="col-lg-2 control-label">Minimo de horas garantizadas de pago:</label>
                    <div class="col-lg-10">
                        <input type="number" class="form-control" id="minimoGarantizado" name="minimoGarantizado"
                                placeholder="Ingrese la cantidad mínima de horas garantizadas" required>
                    </div>
                </div>
                <div class="form-group">
                    <label for="costoHoraNormal" class="col-lg-2 control-label">Valor Hora Normal (UF):</label>
                    <div class="col-lg-10">
                        <input type="text" class="form-control" id="costoHoraNormal" name="costoHoraNormal"
                                placeholder="Ingrese el valor de pago por hora normal en UF" required>
                    </div>
                </div>
                <div class="form-group">
                    <label for="costoHoraExtra" class="col-lg-2 control-label">Valor Hora Extra (UF):</label>
                    <div class="col-lg-10">
                        <input type="text" class="form-control" id="costoHoraExtra" name="costoHoraExtra"
                                placeholder="Ingrese el valor de pago por hora extra en UF" required>
                    </div>
                </div>
                <div class="modal-footer">
                    <a type="button" href="@Url.Action("tiposEquipo","Admin")" class="btn btn-default btn-lg"><i class="glyphicon glyphicon-log-out"></i>&nbsp;Cancelar</a>
                    <button type="submit" class="btn btn-primary btn-lg" id="enviar"><i class="glyphicon glyphicon-floppy-disk"></i>&nbsp;Guardar</button>
                </div>
            </form>
        </div>
</div>
