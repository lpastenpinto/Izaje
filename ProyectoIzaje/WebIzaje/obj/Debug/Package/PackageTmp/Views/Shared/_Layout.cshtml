    <script>
        load_notificaciones();

        function load_notificaciones() {
            $.ajax({
                url: "@Url.Action("load_notificaciones", "Notificaciones")",
                success: function (result) {
                    if (result.length > 0) {
                        $('#icon_notificacion').attr('style', 'background-color:#dc0000');

                        var result = result.split(';');

                        var date = new Date;
                        var y = date.getFullYear();
                        var m = date.getMonthFormatted();
                        var d = date.getDateFormatted();
                        var fecha = new Date(y + "/" + m + "/" + d);

                        for (i = 0; i < result.length; i++) {
                            var item = result[i].split(',');
                            var fechaF = new Date(item[4]);
                            if (item[1] == "Trabajador") {
                                $('#notificacion').append("<li><a href='/Trabajador/Editar/" + item[0] + "' class='text-left'><span class='badge'>" + item[1] + "</span>&nbsp;" + item[2] + "&nbsp;<small><em>" + (fecha - fechaF) / (1000 * 60 * 60 * 24) + " dias</em><small></a></li>");
                            } else {
                                $('#notificacion').append("<li><a href='/Equipo/Editar?tag=" + item[0] + "' class='text-left'><span class='badge'>" + item[1] + "</span>&nbsp;" + item[2] + "&nbsp;<small><em>" + (fecha - fechaF) / (1000 * 60 * 60 * 24) + " dias</em><small></a></li>");
                            }
                            if (i == 8) break;
                        }
                    } else {
                        $('#notificacion').append('<li><em>No hay notificaciones</em></li>');
                    }
                    $('#notificacion').append('<li class="divider"></li>');
                    $('#notificacion').append("<li><a class='text-center' href='@Url.Action("All", "Notificaciones")'>&emsp;<i class='glyphicon glyphicon-chevron-down'></i>&nbsp;Ver Todas</a></li>");
                }
            })
        }
