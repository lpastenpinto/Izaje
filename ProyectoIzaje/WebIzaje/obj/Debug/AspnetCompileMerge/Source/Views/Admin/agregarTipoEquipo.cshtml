@{
    ViewBag.Title = "Nuevo Tipo Equipo";
}

<div class="container">

        <div class="page-header">
            <h1 class="text-center">Nuevo Tipo de Equipo</h1>
        </div>

        <form class="form-horizontal" role="form" method="post" action="@Url.Action("AgregarTipoEquipo", "Admin")">
            <div class="form-group">
                <label for="tipo" class="col-lg-2 control-label">Tipo:</label>
                <div class="col-lg-10">
                    <input type="text" class="form-control" name="tipo" pattern="[a-zA-Z0-9áéíóú ]+" placeholder="Nombre" required>
                </div>
            </div>

            <div class="form-group">
                <label class="col-lg-2 control-label">Familia</label>
                <div class="col-lg-10">
                    <select class="form-control" name="familia" required>
                        @{
                            List<WebIzaje.Models.Familia_Equipo> familias = (List<WebIzaje.Models.Familia_Equipo>)ViewData["familias"];

                            for (int i = 0; i < familias.Count; i++)
                            {
                                <option value="@familias[i].nombre">@familias[i].nombre</option>
                            }
                        }
                    </select>
                </div>
            </div>

            <div class="form-group">
                <label class="col-lg-2 control-label">Minimo de horas garantizadas de pago:</label>
                <div class="col-lg-10">
                    <input type="number" class="form-control" name="minimoGarantizado" placeholder="horas garantizadas" required>
                </div>
            </div>

            <div class="form-group">
                <label class="col-lg-2 control-label">Valor Hora Normal (UF):</label>
                <div class="col-lg-10">
                    <input type="text" class="form-control" name="costoHoraNormal" placeholder="valor" required>
                </div>
            </div>

            <div class="form-group">
                <label for="costoHoraExtra" class="col-lg-2 control-label">Valor Hora Extra (UF):</label>
                <div class="col-lg-10">
                    <input type="text" class="form-control" name="costoHoraExtra" placeholder="valor" required>
                </div>
            </div>

            <div class="modal-footer">
                <a type="button" href="@Url.Action("tiposEquipo","Admin")" class="btn btn-default btn-lg"><i class="glyphicon glyphicon-log-out"></i>&nbsp;Cancelar</a>
                <button type="submit" class="btn btn-primary btn-lg" id="enviar"><i class="glyphicon glyphicon-floppy-disk"></i>&nbsp;Guardar</button>
            </div>
        </form>

</div>
