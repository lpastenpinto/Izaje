
@{
    ViewBag.Title = "Nuevo Jefe Área";
}


<div class="container">
    <div class="panel-body">
        <div class="page-header">
            <h2 class="text-center">Nuevo Jefe Área</h2>
        </div>
    </div>
    <form action="@Url.Action("Guardar_Jefe_Area", "Admin")" class="form-horizontal" role="form" method="post">
        <div class="form-group">
            <label class="col-sm-2 control-label">Nombre</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" name="nombre" value="@ViewBag.nombre" required readonly>
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-2 control-label">Área</label>
            <div class="col-sm-10">
                <select class="form-control" name="area" required>
                    @foreach (WebIzaje.Models.area x in ViewBag.areas)
                    {
                        if (x.nombre.Equals(ViewBag.area))
                        {
                            <option value="@x.nombre" selected>@x.nombre</option>
                        }
                        else{
                            <option value="@x.nombre">@x.nombre</option>
                        }
                    }
                </select>
            </div>
        </div>

        <div class="modal-footer">
            <a type="button" href="@Url.Action("todoUsuarios", "Admin")" class="btn btn-default btn-lg"><i class="glyphicon glyphicon-log-out"></i>&nbsp;Cancelar</a>
            <button type="submit" class="btn btn-primary btn-lg"><i class="glyphicon glyphicon-floppy-disk"></i>&nbsp;Guardar</button>
        </div>
    </form>
</div>





