@{
    ViewBag.Title = "Nueva Superintendencia";
}

<div class="container">
    <div class="panel-body">
        <div class="page-header">
            <h2 class="text-center">Nueva SuperIntendencia</h2>
        </div>

        <form class="form-horizontal" role="form" method="post" action="@Url.Action("AgregarSuperintendencia", "Admin")">
            <div class="form-group">
                <label for="nombre" class="col-lg-2 control-label">Nombre:</label>
                <div class="col-lg-10">
                    <input type="text" class="form-control" name="nombre" pattern="[a-zA-Z0-9áéíóú ]+"
                           placeholder="Nombre" required>
                </div>
            </div>

            
            <div class="form-group">
                <label for="gerencia" class="col-lg-2 control-label">Gerencia:</label>
                <div class="col-lg-10">
                    <select class="form-control" name="gerencia" required>
                        @{
                            if (ViewData["gerencias"] != null)
                            {
                                List<string> gerencias = (List<string>)ViewData["gerencias"];
                                for (int i = 0; i < gerencias.Count; i++)
                                {
                                    <option value="@gerencias[i]">@gerencias[i]</option>
                                }
                            }
                        }
                    </select>
                </div>
            </div>

            <div class="form-group">
                <label for="descripcion" class="col-lg-2 control-label">Descripción:</label>
                <div class="col-lg-10">
                    <textarea class="form-control" name="descripcion" rows="3"
                              style="resize:none !important"
                              placeholder="Descripción"></textarea>
                </div>
            </div>

            <div class="modal-footer">
                <a type="button" href="@Url.Action("superintendencias","Admin")" class="btn btn-default btn-lg"><i class="glyphicon glyphicon-log-out"></i>&nbsp;Cancelar</a>
                <button type="submit" class="btn btn-primary btn-lg"><i class="glyphicon glyphicon-floppy-disk"></i>&nbsp;Guardar</button>
            </div>
        </form>
    </div>
</div>
