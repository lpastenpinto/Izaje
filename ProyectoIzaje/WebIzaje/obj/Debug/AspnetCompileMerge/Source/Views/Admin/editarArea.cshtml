@model WebIzaje.Models.area
@{
    ViewBag.Title = "Editar Area";
}

<div class="container">

        <div class="page-header">
            <h2 class="text-center">Editar Área</h2>
        </div>

        <form class="form-horizontal" role="form" method="post" action="@Url.Action("AgregarEditarArea", "Admin")">
            <div class="form-group">
                <label for="nombre" class="col-lg-2 control-label">Nombre:</label>
                <div class="col-lg-10">
                    <input type="hidden" name="nombre" value="@Model.nombre">
                    <input type="text" class="form-control" name="nombre_nuevo" pattern="[a-zA-Z0-9áéíóú ]+" value="@Model.nombre" placeholder="Nombre" required>
                </div>
            </div>
            <div class="form-group">
                <label for="descripcion" class="col-lg-2 control-label">Descripción:</label>
                <div class="col-lg-10">
                    <textarea class="form-control" name="descripcion" rows="3"
                              style="resize:none !important"
                              placeholder="Descripción">@Model.descripcion</textarea>
                </div>
            </div>
            <div class="form-group">
                <label for="superintendencia" class="col-lg-2 control-label">Superintendencia:</label>
                <div class="col-lg-10">
                    <select class="form-control" name="superintendencia" required>
                        @{
                            if (ViewBag.superintendencias != null)
                            {
                                List<WebIzaje.Models.superintendencia> sups = (List<WebIzaje.Models.superintendencia>)ViewData["superintendencias"];
                                foreach (var x in sups)
                                {
                                    if (x.nombre.Equals(Model.superintendencia))
                                    {
                                        <option value="@x.nombre" selected>@x.nombre</option>
                                    }
                                    else
                                    {
                                        <option value="@x.nombre">@x.nombre</option>
                                    }
                                }
                            }
                        }
                    </select>
                </div>
            </div>
            <div class="modal-footer">
                <a type="button" href="@Url.Action("areas","Admin")" class="btn btn-default btn-lg"><i class="glyphicon glyphicon-log-out"></i>&nbsp;Cancelar</a>
                <button type="submit" class="btn btn-primary btn-lg"><i class="glyphicon glyphicon-floppy-save"></i>&nbsp;Guardar</button>
            </div>
        </form>
</div>

